<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView para mostrar el nombre del jugador -->
    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre" />

    <!-- TextView para mostrar los apellidos del jugador -->
    <TextView
        android:id="@+id/apellidosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos" />

    <!-- TextView para mostrar el equipo al que pertenece el jugador -->
    <TextView
        android:id="@+id/equipoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo" />
</LinearLayout>
